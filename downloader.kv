#:kivy 1.11.1
#:import Window kivy.core.window.Window
#:import Clipboard kivy.core.clipboard.Clipboard
#:import Factory kivy.factory.Factory

<ActionBarMain>:
    pos_hint: {'top':1}
    ActionView:
        use_separator: True
        ActionPrevious:
            app_icon: ''
            with_previous: False
        ActionOverflow:
        ActionButton:
            on_release: app.url = Clipboard.paste()
            Image:
                x: self.parent.x
                y: self.parent.y
                size: self.parent.size
                stretch: True
                source: 'img/clipboard.png'
        ActionButton:
            on_press: app.open_settings()
            Image:
                x: self.parent.x
                y: self.parent.y
                size: self.parent.size
                stretch: True
                source: 'img/work.png'
        ActionButton:
            on_release: Factory.AboutPopup().open()
            Image:
                x: self.parent.x
                y: self.parent.y
                size: self.parent.size
                stretch: True
                source: 'img/info.png'

<AboutPopup>:
    auto_dismiss: False
    title: 'About'
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            Label:
                id: about_label
                text: root.about_text
                size: self.texture_size
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
                markup: True
        Button:
            text: 'Close'
            on_release: root.dismiss()
            size_hint_y: None

<LogPopup>:
    auto_dismiss: False
    title: 'Log'
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            size_hint_y: .9
            Label:
                id: log_label
                text: root.log
                size: self.texture_size
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
                markup: True
        Button:
            size_hint_y: .1
            text: 'Close'
            on_release: root.dismiss()
            height: '30dp'  

<InfoDisplayPopup>:
    auto_dismiss: False
    title: 'Video Informations'
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            Label: 
                id: info_label
                size: self.texture_size
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
        Button:
            size_hint_y: .1
            text: 'Close'
            on_release: root.dismiss()
            height: '30dp'

<FormatSelectPopup>:
    auto_dismiss: False
    title: 'Format select'
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            size_hint_y: .9
            GridLayout:
                id: layout
                cols: 2
        Button:
            size_hint_y: .1
            text: 'Close'
            on_release: root.dismiss()
            height: '30dp'                 

<DownloaderLayout>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        TextInput:
            id: url_textinput
            hint_text: 'Enter url here'
            size_hint_y: None
            multiline: False
            text: app.url
            on_text: app.url = self.text
            on_text: app.meta = {}
        Button:
            id: info_display_button
            on_press: root.on_press_button_info()
            size_hint_y: None
            size_hint_x: 0.1
            Image:
                x: self.parent.x
                y: self.parent.y
                size: self.parent.size
                stretch: True
                source: 'img/info.png'            
        Button:
            id: download_button
            on_press: root.on_press_button_download()
            size_hint_y: None
            size_hint_x: 0.1
            Image:
                x: self.parent.x
                y: self.parent.y
                size: self.parent.size
                stretch: True
                source: 'img/down-arrow.png'
    RV:
        id: rv

<DownloadStatusBar>:
    orientation: 'horizontal'
    padding: 5
    bcolor: .6, .6, .6, 1
    canvas.before:
        Color:
            rgba: self.bcolor
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.url if root.title == '' else root.title
            text_size: self.width, None
            height: self.texture_size[1]
        Label:
            text: str(root.percent) + '%' + ' ' + root.speed + ' ' + root.file_size + ' ' + root.ETA
            text_size: self.width, None
            height: self.texture_size[1]
        ProgressBar:
            value: root.percent
    Image:
        x: self.parent.x
        y: self.parent.y
        size: self.parent.size
        stretch: True
        source: root.status_icon
        size_hint_x: .1
    Button:
        on_release: root.on_release_show_log_button()
        height: self.texture_size[1]
        size_hint_x: .1
        Image:
            x: self.parent.x
            y: self.parent.y
            size: self.parent.size
            stretch: True
            source: 'img/report.png'


<RV>:
    viewclass: 'DownloadStatusBar'
    RecycleBoxLayout:
        id: rbl
        default_size: None, dp(60)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<RootLayout>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        ActionBarMain:
            id: action_bar_main
        DownloaderLayout:
            id: main_layout
            bcolor: .2, .25, .3, 1
            canvas.before:
                Color:
                    rgba: self.bcolor
                Rectangle:
                    pos: self.pos
                    size: self.size            